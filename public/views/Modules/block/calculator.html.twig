<div class="block-calculator">
  <div class="simple-operations">
    <button type="button" name="sum">+</button>
    <button type="button" name="res">-</button>
    <button type="button" name="mult">x</button>
    <button type="button" name="div">÷</button>
    <button type="button" name="equal">=</button>
  </div>
  <div class="expresions-container">
    <button type="button" name="left-parenthesis">(</button>
    <button type="button" name="right-parenthesis">)</button>
  </div>
  <div class="numbers-container">
